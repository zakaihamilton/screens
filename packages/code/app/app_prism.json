{
    "title": "Prism",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "1200px",
        "height": "600px"
    },
    "maximize": null,
    "icon": "/packages/res/icons/prism.png",
    "widget.menu.items": [
        {
            "text": "Transform",
            "select": [
                {
                    "text": "Refresh",
                    "select": "app.prism.reload",
                    "options": {
                        "state": "select",
                        "separator": true
                    }
                },
                "app.prism.transform.menu"
            ]
        },
        {
            "text": "Layout",
            "select": [
                {
                    "text": "Animation",
                    "select": "app.prism.animation",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "Auto Rotate",
                    "select": "app.prism.autoRotate",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "Reset Rotation",
                    "select": "app.prism.resetRotation"
                },
                {
                    "text": "Font Size",
                    "select": "header"
                },
                "widget.transform.fontSizesPx(app.prism.fontSize)"
            ]
        }
    ],
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "viewer",
            "ui.class.class": "app.prism.viewer",
            "ui.touch.down": "app.prism.rotateEvent"
        },
        "app.prism.transform.popup"
    ],
    "ui.property.after": {
        "storage.local.key": "app-prism-window",
        "storage.local.restore": "widget.window.store",
        "app.prism.initOptions": null,
        "app.prism.reload": null
    }
}