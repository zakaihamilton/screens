                    "Auto",
                    "app.prism.language",
                    {
                        "state": "select"
                    }
                ],
                [
                    "English",
                    "app.prism.language",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Hebrew",
                    "app.prism.language",
                    {
                        "state": "select"
                    }
                ]
