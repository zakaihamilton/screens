{
    "title": "Theme",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "500px",
        "height": "220px"
    },
    "icon": "/packages/res/icons/theme.png",
    "maximize": true,
    "widget.menu.items": [
        {
            "text": "Theme",
            "select": [
                "ui.theme.menuList",
                {
                    "text": "Night Mode",
                    "select": "ui.theme.nightMode",
                    "options": {
                        "separator": true,
                        "state": "select"
                    }
                }
            ]
        }
    ],
    "ui.property.after": {
        "storage.local.key": "app-theme-window",
        "storage.local.restore": "widget.window.store"
    }
}