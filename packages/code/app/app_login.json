{
    "title": "Login",
    "fixed": true,
    "popup": true,
    "ui.property.after":{
        "ui.property.style":{
            "left":"30%",
            "top":"20%",
            "width": "400px",
            "height": "300px"
        }
    },
    "app.login.attachGoogle":"signin",
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.elements": [
                {
                    "ui.basic.text": "Please login with your Google account to continue:",
                    "ui.property.style": {
                        "paddingTop": "10px"
                    }
                },
                {
                    "ui.basic.text": "User Name:",
                    "ui.property.style": {
                        "paddingTop": "100px"
                    }
                },
                {
                    "ui.basic.text": "@lib.google.currentName",
                    "ui.basic.readOnly": true,
                    "ui.property.style": {
                        "width": "300px",
                        "display": "inline-block"
                    },
                    "ui.basic.type": "text",
                    "ui.basic.var": "userName"
                }
            ]
        },
        {
            "ui.basic.text":"Sign out",
            "ui.basic.var":"signout",
            "ui.touch.click":"lib.google.signout"
        }
    ]
}
