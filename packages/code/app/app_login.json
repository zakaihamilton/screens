{
    "title": "Login",
    "fixed": true,
    "popup": true,
    "ui.property.after":{
        "ui.property.style":{
            "left":"30%",
            "top":"20%",
            "width": "40%",
            "height": "400px"
        }
    },
    "app.login.attachGoogle":"signin",
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.elements": [
                {
                    "ui.basic.text": "User Name",
                    "ui.property.style": {
                        "paddingTop": "10px"
                    }
                },
                {
                    "ui.basic.text": "@lib.google.currentName",
                    "ui.basic.readOnly": true,
                    "ui.property.style": {
                        "width": "250px",
                        "display": "inline-block"
                    },
                    "ui.basic.type": "text",
                    "ui.basic.var": "userName"
                }
            ]
        },
        {
            "ui.basic.text":"Sign out",
            "ui.basic.var":"signout",
            "ui.touch.click":"app.login.signout",
            "ui.basic.show":"@lib.google.isSignedIn"
        }
    ]
}
