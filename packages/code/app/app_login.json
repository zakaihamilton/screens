{
    "title": "Login",
    "fixed": true,
    "popup": true,
    "icon": "/packages/res/icons/login.png",
    "ui.property.after": {
        "ui.property.style": {
            "left": "20%",
            "top": "20%",
            "width": "400px",
            "height": "300px"
        }
    },
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.elements": [
                {
                    "ui.basic.text": "Please login with your Google account to continue:",
                    "ui.property.style": {
                        "paddingTop": "10px"
                    }
                },
                {
                    "ui.basic.show": "@core.login.isSignedIn",
                    "ui.basic.text": "User Name:",
                    "ui.basic.var": "userNameLabel",
                    "ui.property.style": {
                        "paddingTop": "40px"
                    }
                },
                {
                    "ui.basic.show": "@core.login.isSignedIn",
                    "ui.basic.text": "@core.login.userName",
                    "ui.basic.readOnly": true,
                    "ui.property.style": {
                        "width": "300px",
                        "display": "inline-block"
                    },
                    "ui.basic.type": "text",
                    "ui.basic.var": "userName"
                },
                {
                    "ui.basic.text": "Status:",
                    "ui.property.style": {
                        "paddingTop": "10px"
                    }
                },
                {
                    "ui.basic.text": "@core.login.currentStatus",
                    "ui.basic.type": "text",
                    "ui.basic.readOnly": true,
                    "ui.basic.var": "status",
                    "ui.property.style": {
                        "width": "300px",
                        "display": "inline-block"
                    }
                }
            ]
        },
        {
            "ui.basic.text": "Sign in",
            "ui.basic.var": "signin",
            "ui.basic.hide": "@core.login.isSignedIn",
            "ui.touch.click": "core.login.signin",
            "ui.property.style": {
                "marginTop": "20px"
            }
        },
        {
            "ui.basic.text": "Sign out",
            "ui.basic.var": "signout",
            "ui.basic.show": "@core.login.isSignedIn",
            "ui.touch.click": "core.login.signout",
            "ui.property.style": {
                "marginTop": "20px"
            }
        },
        {
            "ui.basic.text": "Disconnect",
            "ui.basic.var": "disconnect",
            "ui.basic.show": "@core.login.isSignedIn",
            "ui.touch.click": "core.login.disconnect",
            "ui.property.style": {
                "marginTop": "20px"
            }
        }
    ]
}