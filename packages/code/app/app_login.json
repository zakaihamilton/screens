{
    "title": "Login",
    "fixed": true,
    "popup": true,
    "ui.property.after":{
        "ui.property.style":{
            "left":"30%",
            "top":"20%",
            "width": "40%",
            "height": "400px"
        }
    },
    "app.login.attachGoogle":"signin",
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.elements": [
                {
                    "ui.basic.text": "User Name",
                    "ui.property.style": {
                        "paddingTop": "10px"
                    }
                },
                {
                    "ui.basic.text": "@lib.googleauth.currentName",
                    "ui.basic.readOnly": true,
                    "ui.property.style": {
                        "width": "250px",
                        "display": "inline-block"
                    },
                    "ui.basic.type": "text",
                    "ui.basic.var": "userName"
                }
            ]
        },
        {
            "ui.basic.text":"Sign out",
            "ui.basic.var":"signout",
            "ui.touch.click":"app.login.signout",
            "ui.basic.show":"@lib.googleauth.isSignedIn"
        },
        {
            "ui.basic.tag":"fb:login-button",
            "ui.property.style":{
                "visibility":"",
                "position":"absolute",
                "left":"10%",
                "bottom":"50px"
            },
            "ui.property.attribute":{
                "scope":"public_profile",
                "onlogin":"app.login.checkFBLoginState",
                "data-max-rows":"1",
                "data-size":"large",
                "data-button-type":"continue_with",
                "data-auto-logout-link":true
            }
        }
    ]
}
