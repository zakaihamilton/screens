{
    "title": "Diagram",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "1200px",
        "height": "600px"
    },
    "icon": "/packages/res/icons/diagram.png",
    "widget.menu.items": [
        [
            "Transform",
            [
                [
                    "Refresh",
                    "app.diagram.reload",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Translation",
                    "app.diagram.doTranslation",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Keep Source",
                    "app.diagram.keepSource",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Abridged",
                    "app.diagram.abridged",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Explanation",
                    "app.diagram.doExplanation",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Prioritize Explanation",
                    "app.diagram.prioritizeExplanation",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Styles",
                    "app.diagram.addStyles",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Category",
                    "app.diagram.category",
                    {
                        "state": "select",
                        "enabled": "app.diagram.category"
                    }
                ],
                [
                    "Headings",
                    "app.diagram.headings",
                    {
                        "state": "select",
                        "enabled": "app.diagram.addStyles"
                    }
                ],
                [
                    "Phase Numbers",
                    "app.diagram.phaseNumbers",
                    {
                        "state": "select",
                        "enabled": "app.diagram.addStyles"
                    }
                ],
                [
                    "Sub Headings",
                    "app.diagram.subHeadings",
                    {
                        "state": "select",
                        "enabled": "app.diagram.addStyles"
                    }
                ],
                [
                    "Language",
                    "header"
                ],
                [
                    "Auto",
                    "app.diagram.language",
                    {
                        "state": "select"
                    }
                ],
                [
                    "English",
                    "app.diagram.language",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Hebrew",
                    "app.diagram.language",
                    {
                        "state": "select"
                    }
                ]
            ]
        ],
        [
            "Layout",
            [
                [
                    "Font Size",
                    "header"
                ],
                "widget.transform.fontSizesPx(app.diagram.fontSize)"
            ]
        ]
    ],
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "viewer"
        },
        {
            "ui.basic.var": "popup",
            "ui.basic.tag": "div",
            "ui.basic.html": "@widget.transform.html",
            "ui.class.add": "modal",
            "ui.style.zIndex": "1000"
        }
    ],
    "ui.property.after": {
        "storage.local.key": "app-diagram-window",
        "storage.local.restore": "widget.window.store",
        "app.diagram.initOptions": null,
        "app.diagram.reload": null
    }
}