{
    "title": "Gematria",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "300px",
        "height": "220px"
    },
    "maximize": null,
    "icon": "/packages/res/icons/gematria.png",
    "widget.menu.items": [
        {
            "text": "Gematria",
            "select": [
                {
                    "text": "Clear",
                    "select": "app.gematria.clear"
                },
                {
                    "text": "Summation of Letters",
                    "select": "app.gematria.sumEnabled",
                    "options": {
                        "state": "select",
                        "separator": true
                    }
                },
                {
                    "text": "Ending Letters",
                    "select": "app.gematria.endingLetters",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "Inclusion (Kolel)",
                    "select": "app.gematria.inclusion",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "Language",
                    "select": "header"
                },
                {
                    "text": "None",
                    "select": "app.gematria.language",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "English",
                    "select": "app.gematria.language",
                    "options": {
                        "state": "select",
                        "separator": true
                    }
                },
                {
                    "text": "Hebrew",
                    "select": "app.gematria.language",
                    "options": {
                        "state": "select"
                    }
                }
            ]
        },
        {
            "text": "Layout",
            "select": [
                {
                    "text": "Font Size",
                    "select": "header"
                },
                "widget.transform.fontSizesEm(app.gematria.fontSize)"
            ]
        },
        {
            "text": "Content",
            "select": [
                "app.gematria.content.menu"
            ]
        }
    ],
    "ui.basic.elements": [
        {
            "ui.basic.div": "div",
            "ui.class.class": "app.gematria.bar",
            "ui.basic.elements": [
                {
                    "ui.basic.div": "div",
                    "ui.basic.text": "Numerology",
                    "ui.class.class": "app.gematria.input.label"
                },
                {
                    "ui.element.component": "widget.input",
                    "ui.basic.var": "input",
                    "ui.class.classExtra": "app.gematria.input",
                    "core.event.input": "app.gematria.calcNumerology"
                }
            ]
        },
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "diagram",
            "ui.class.class": "app.gematria.diagram"
        }
    ],
    "ui.property.after": {
        "storage.local.key": "app-gematria-window",
        "storage.local.restore": "widget.window.store"
    }
}