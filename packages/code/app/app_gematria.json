{
    "title": "Gematria",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "300px",
        "height": "220px"
    },
    "maximize": null,
    "icon": "/packages/res/icons/gematria.png",
    "widget.menu.items": [
        [
            "Gematria",
            [
                [
                    "Clear",
                    "app.gematria.clear"
                ],
                [
                    "Summation of Letters",
                    "app.gematria.sumEnabled",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Ending Letters",
                    "app.gematria.endingLetters",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Inclusion (Kolel)",
                    "app.gematria.inclusion",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Language",
                    "header"
                ],
                [
                    "None",
                    "app.gematria.language",
                    {
                        "state": "select"
                    }
                ],
                [
                    "English",
                    "app.gematria.language",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Hebrew",
                    "app.gematria.language",
                    {
                        "state": "select"
                    }
                ]
            ]
        ],
        [
            "Layout",
            [
                [
                    "Font Size",
                    "header"
                ],
                "widget.transform.fontSizesEm(app.gematria.fontSize)"
            ]
        ],
        [
            "Content",
            [
                "app.gematria.content.menu"
            ]
        ]
    ],
    "ui.basic.elements": [
        {
            "ui.basic.div": "div",
            "ui.class.class": "app.gematria.bar",
            "ui.basic.elements": [
                {
                    "ui.basic.div": "div",
                    "ui.basic.text": "Numerology",
                    "ui.class.class": "app.gematria.input.label"
                },
                {
                    "ui.element.component": "widget.input",
                    "ui.basic.var": "input",
                    "ui.class.classExtra": "app.gematria.input",
                    "core.event.input": "app.gematria.calcNumerology"
                }
            ]
        },
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "diagram",
            "ui.class.class": "app.gematria.diagram"
        }
    ],
    "ui.property.after": {
        "storage.local.key": "app-gematria-window",
        "storage.local.restore": "widget.window.store"
    }
}