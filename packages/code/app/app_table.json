{
    "title": "Table",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "1200px",
        "height": "600px"
    },
    "maximize": null,
    "icon": "/packages/res/icons/table.png",
    "widget.menu.items": [
        [
            "Table",
            [
                [
                    "Clear",
                    "app.table.clear"
                ],
                [
                    "Edit Mode",
                    "app.table.editMode",
                    {
                        "state": "select",
                        "separator": true
                    }
                ],
                [
                    "Auto Complete",
                    "app.table.autoComplete",
                    {
                        "state": "select",
                        "visible": "app.table.editMode"
                    }
                ],
                [
                    "Row Header",
                    "app.table.rowHeader",
                    {
                        "state": "select",
                        "separator": true,
                        "disabled": "app.table.lock"
                    }
                ],
                [
                    "Column Header",
                    "app.table.columnHeader",
                    {
                        "state": "select",
                        "disabled": "app.table.lock"
                    }
                ]
            ]
        ],
        [
            "Transform",
            [
                [
                    "Refresh",
                    "app.table.reload",
                    {
                        "separator": true
                    }
                ],
                "app.table.transform.menu"
            ]
        ],
        [
            "Layout",
            [
                [
                    "Border",
                    "app.table.border",
                    {
                        "state": "select"
                    }
                ],
                [
                    "Font Size",
                    "header"
                ],
                "widget.transform.fontSizesPx(app.table.fontSize)"
            ]
        ],
        [
            "Content",
            [
                "app.table.content.menu"
            ]
        ]
    ],
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "table",
            "ui.class.class": "app.table.widget"
        },
        {
            "ui.basic.var": "popup",
            "ui.basic.tag": "div",
            "ui.basic.html": "@widget.transform.html",
            "ui.class.add": "modal",
            "ui.style.zIndex": "1000",
            "ui.property.after": {
                "ui.node.parent": "@ui.element.workspace"
            }
        }
    ],
    "ui.property.after": {
        "storage.local.key": "app-table-window",
        "storage.local.restore": "widget.window.store",
        "title": "Table",
        "name": "",
        "app.table.initOptions": null,
        "app.table.reload": null
    }
}