{
    "title": "Table",
    "ui.property.style": {
        "left": "50px",
        "top": "50px",
        "width": "1200px",
        "height": "600px"
    },
    "maximize": null,
    "icon": "/packages/res/icons/table.png",
    "widget.menu.items": [
        {
            "text": "Table",
            "select": [
                {
                    "text": "Clear",
                    "select": "app.table.clear"
                },
                {
                    "text": "Edit Mode",
                    "select": "app.table.editMode",
                    "options": {
                        "state": "select",
                        "separator": true
                    }
                },
                {
                    "text": "Auto Complete",
                    "select": "app.table.autoComplete",
                    "options": {
                        "state": "select",
                        "visible": "app.table.editMode"
                    }
                },
                {
                    "text": "Row Header",
                    "select": "app.table.rowHeader",
                    "options": {
                        "state": "select",
                        "separator": true,
                        "disabled": "app.table.lock"
                    }
                },
                {
                    "text": "Column Header",
                    "select": "app.table.columnHeader",
                    "options": {
                        "state": "select",
                        "disabled": "app.table.lock"
                    }
                }
            ]
        },
        {
            "text": "Transform",
            "select": [
                {
                    "text": "Refresh",
                    "select": "app.table.reload",
                    "options": {
                        "separator": true
                    }
                },
                "app.table.transform.menu"
            ]
        },
        {
            "text": "Layout",
            "select": [
                {
                    "text": "Border",
                    "select": "app.table.border",
                    "options": {
                        "state": "select"
                    }
                },
                {
                    "text": "Font Size",
                    "select": "header"
                },
                "widget.transform.fontSizesPx(app.table.fontSize)"
            ]
        },
        {
            "text": "Content",
            "select": [
                "app.table.content.menu"
            ]
        }
    ],
    "ui.basic.elements": [
        {
            "ui.basic.tag": "div",
            "ui.basic.var": "table",
            "ui.class.class": "app.table.widget"
        },
        "app.table.transform.popup"
    ],
    "ui.property.after": {
        "storage.local.key": "app-table-window",
        "storage.local.restore": "widget.window.store",
        "title": "Table",
        "name": "",
        "app.table.initOptions": null,
        "app.table.reload": null
    }
}