{
    "title": "Player",
    "icon": "/packages/res/icons/player_tray.png",
    "ui.property.style":{
        "left": "150px",
        "top": "150px",
        "width": "950px",
        "height": "650px"
    },
    "widget.menu.items": [
        ["File", [
                ["Refresh", "app.player.refresh"]
            ]
        ]
    ],
    "ui.basic.elements": [
        {
            "ui.basic.text": "Group:",
            "ui.property.style":{
                "left":"10px",
                "top":"10px",
                "width":"100px",
                "position":"absolute"
            }
        },
        {
            "ui.basic.var": "groupList",
            "ui.basic.text": "@ui.param.groupName(American)",
            "ui.property.style":{
                "left":"10px",
                "top":"30px",
                "width":"200px",
                "position":"absolute"
            },
            "ui.element.count": 0,
            "core.link.onChange": "app.player.onChangeGroup",
            "ui.group.data": {
                "ui.data.keyList": ["ui.basic.text"],
                "ui.data.default": {
                    "group": "one",
                    "state": false
                },
                "ui.data.values": [
                    "app.player.groupList"
                ]
            },
            "storage.local.key": "@ui.windowkey.app-player-group",
            "storage.local.restore": "@ui.param.groupName(ui.basic.text)"
        },
        {
            "ui.basic.text": "Count:",
            "ui.property.style":{
                "left":"230px",
                "top":"10px",
                "width":"100px",
                "position":"absolute"
            }
        },
        {
            "ui.basic.text":"",
            "ui.basic.type":"number",
            "ui.property.style":{
                "left":"230px",
                "top":"30px",
                "width":"100px",
                "position":"absolute"
            },
            "ui.basic.readOnly":true,
            "ui.basic.var":"sessionCount"
        },
        {
            "ui.basic.text": "Session:",
            "ui.property.style":{
                "left":"10px",
                "top":"60px",
                "width":"100px",
                "position":"absolute"
            }
        },
        {
            "ui.basic.var": "sessionList",
            "ui.basic.text": "",
            "ui.property.style":{
                "left":"10px",
                "top":"80px",
                "width":"90%",
                "position":"absolute"
            },
            "ui.element.count": 0,
            "core.link.onChange": "app.player.onChangeSession",
            "ui.monitor.change": "app.player.onChangeSession",
            "ui.group.data": {
                "ui.data.keyList": ["ui.basic.text"],
                "ui.data.default": {
                    "group": "one",
                    "state": false
                },
                "ui.data.values": [
                    "app.player.sessionList"
                ]
            }
        },
        {
            "state": true,
            "group": "type",
            "ui.basic.text": "Audio",
            "ui.property.style":{
                "left":"10px",
                "top":"130px",
                "width":"100px",
                "position":"absolute",
                "visibility":"hidden"
            },
            "ui.basic.var":"audioType",
            "ui.touch.click":"app.player.updatePlayer"
        },
        {
            "state": false,
            "group": "type",
            "ui.basic.text": "Video",
            "ui.property.style":{
                "left":"100px",
                "top":"130px",
                "width":"100px",
                "position":"absolute",
                "visibility":"hidden"
            },
            "ui.basic.var":"videoType",
            "ui.touch.click":"app.player.updatePlayer"
        },
        {
            "ui.element.component":"widget.audio",
            "ui.attribute.preload":"auto",
            "ui.basic.var":"audioPlayer",
            "ui.property.style" : {
                "display":"none",
                "left":"5%",
                "top":"160px",
                "width":"90%",
                "height":"100px",
                "position":"absolute"
            }
        },
        {
            "ui.element.component":"widget.video",
            "ui.basic.var":"videoPlayer",
            "ui.property.style" : {
                "display":"none",
                "left":"5%",
                "top":"160px",
                "width":"90%",
                "height":"70%",
                "position":"absolute"
            }
        },
        {
            "ui.element.component":"widget.spinner",
            "ui.basic.var": "spinner"
        }
    ],
    "core.link.work": "app.player.work",
    "ui.property.after":{
        "storage.local.key": "app-player-window",
        "storage.local.restore": "widget.window.store",
        "app.player.update":"@ui.param.sessionName"
    }
}
