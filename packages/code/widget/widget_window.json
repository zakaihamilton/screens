                {
                    "ui.class.class": "header",
                    "ui.basic.var": "header"
                },
                {
                    "ui.element.component": "widget.container",
                    "ui.basic.var": "container",
                    "ui.basic.elements": [
                        {
                            "ui.basic.tag": "div",
                            "ui.class.class": "align",
                            "ui.basic.var": "align"
