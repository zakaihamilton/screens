{
    "ui.property.style":{
        "width": "150px",
        "height": "150px",
        "position": "absolute",
        "left": "100px",
        "top": "100px"
    },
    "ui.move.enabled": true,
    "ui.resize.enabled": true,
    "ui.class.class": "border",
    "ui.class.add": "@widget.window.mainClass",
    "ui.group.data": {
        "ui.data.keyList": ["ui.class.class"],
        "ui.data.default": {
            "ui.resize.extend": null
        },
        "ui.data.values": [
            ["left"],
            ["right"],
            ["top"],
            ["bottom"],
            ["bottom-left"],
            ["bottom-right"],
            ["top-left"],
            ["top-right"]
        ]
    },
    "ui.basic.elements": [
        {
            "ui.basic.var": "icon",
            "text": "",
            "ui.class.class":"widget.window.icon",
            "ui.basic.src": "/packages/res/icons/default.png",
            "ui.touch.dblclick": "menu.context.show(taskbar)",
            "ui.touch.click": "widget.window.toggleVisibility",
            "ui.basic.window": null,
            "ui.node.parent": "@widget.tray.tray",
            "widget.icon.type":"@widget.tray.type(widget.tray.tray,)"
        },
        {
            "ui.class.class": "margin",
            "ui.basic.elements": [
                {
                    "ui.basic.var": "title",
                    "ui.class.class": "title",
                    "ui.basic.elements": [
                        {
                            "ui.basic.window":"@ui.node.parent",
                            "ui.basic.var": "close",
                            "ui.class.class": "close",
                            "ui.touch.click": "menu.context.show",
                            "ui.touch.dblclick": "close",
                            "ui.class.add": "@widget.window.mainClass"
                        },
                        {
                            "ui.basic.var": "label",
                            "ui.basic.text": "",
                            "ui.class.class": "label",
                            "ui.move.extend": null,
                            "ui.touch.dblclick": "toggleSize"
                        },
                        {
                            "ui.basic.window":"@ui.node.parent",
                            "ui.basic.var": "minimize",
                            "ui.class.class": ["action", "minimize"],
                            "ui.touch.click": "minimize",
                            "ui.basic.elements": {
                                "ui.class.class": "minimize.arrow"
                            }
                        },
                        {
                            "ui.basic.window":"@ui.node.parent",
                            "ui.basic.var": "maximize",
                            "ui.class.class": ["action", "maximize"],
                            "ui.touch.click": "toggleSize",
                            "ui.basic.elements": {
                                "ui.class.class": "maximize.arrow"
                            }
                        }
                    ]
                },
                {
                    "ui.class.class": "header",
                    "ui.basic.var": "header"
                },
                {
                    "ui.element.component": "widget.container",
                    "ui.basic.var": "container"
                },
                {
                    "ui.class.class": "footer",
                    "ui.basic.var": "footer"
                }
            ]
        }
    ],
    "ui.property.broadcast": {
        "ui.class.add": "restore"
    }
}
