{
    "title": "Transform",
    "ui.style.left": "250px",
    "ui.style.top": "100px",
    "ui.style.width": "1000px",
    "ui.style.height": "500px",
    "icon": "/packages/res/icons/transform.png",
    "ui.style.background": "white",
    "widget.menu.items": [
        ["File", [
                ["New", "app.transform.new"],
                ["Convert", "app.transform.convert", {
                        "separator": true
                    }
                ]
            ]
        ],
        ["Options", [
                ["Auto Scroll", "app.transform.autoScroll", {
                        "state": "select"
                    }
                ],
                ["Translation", "app.transform.translation", {
                        "state": "select",
                        "separator":true
                    }
                ],
                ["Styles", "app.transform.addStyles", {
                        "state": "select"
                    }
                ],
                ["Keep Source", "app.transform.keepSource", {
                        "state": "select"
                    }
                ],
                ["HTML", "app.transform.showHtml", {
                        "state": "select",
                        "separator":true
                    }
                ],
                ["Input", "app.transform.showInput", {
                        "state": "select"
                    }
                ]
            ]]
    ],
    "ui.basic.elements": [
        {
            "ui.theme.class": "app.transform.container",
            "ui.basic.elements": [
                {
                    "ui.element.component": "widget.editor",
                    "ui.theme.class": "app.transform.input",
                    "storage.cache.key":"app-transform-input",
                    "storage.cache.restoreLocal":null,
                    "ui.monitor.change":"storage.cache.storeLocal",
                    "ui.basic.var": "input"
                },
                {
                    "ui.basic.text":"Convert",
                    "ui.touch.click":"app.transform.convert",
                    "ui.basic.var": "convert"
                },
                {
                    "ui.basic.tag": "div",
                    "ui.theme.class": "app.transform.output",
                    "ui.basic.var": "output"
                }
            ]
        }
    ]
}
